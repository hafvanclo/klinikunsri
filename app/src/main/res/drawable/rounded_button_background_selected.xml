<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika tombol tidak aktif -->
    <item android:state_enabled="false" android:drawable="@drawable/rounded_button_disabled" />

    <!-- State ketika tombol ditekan -->
    <item android:state_pressed="true" android:drawable="@drawable/rounded_button_pressed" />

    <!-- State default -->
    <item android:drawable="@drawable/rounded_button_normal" />
</selector>
