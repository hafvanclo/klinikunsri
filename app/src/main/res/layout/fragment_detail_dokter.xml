<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.dokter.detailDokter">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Detail"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="79dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Doctor Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_doctor_placeholder" />

        <!-- Doctor Details (Name and Specialization) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Adetya"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctorSpesialis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialisasi Gigi"
                android:textColor="@color/text_color"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Header Dokter -->
        <!-- Tentang Dokter -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tentang Dokter"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="normal"
            android:text="Dr. Adetya adalah seorang dokter gigi berpengalaman yang memprioritaskan perawatan komprehensif dan personalisasi untuk setiap pasien. Dengan latar belakang pendidikan di Universitas Indonesia dan spesialisasi dalam spesialisasi gigi. Terampil dalam berbagai perawatan mulai dari pembersihan gigi rutin hingga restorasi gigi yang kompleks. Pendekatan empatik dan komunikatifnya memastikan pasien merasa nyaman dan teredukasi selama proses perawatan. "
            android:textSize="14sp" />

        <!-- Pengalaman -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pengalaman"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="normal"
            android:text="8 Tahun"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Jadwal"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/scheduleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/day1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Sen"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/day2"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Sel"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Rab"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Kam"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Jum"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/day_background_default"
                android:text="Sab"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Tambahkan TextView untuk Rab, Kam, Jum, Sab -->
        </LinearLayout>


        <!-- Selected Day and Time -->


        <!-- Jadwal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Jam Praktik"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
            android:id="@+id/practiceHours"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:text="08:00"
            android:textAlignment="center"
            android:textColor="#FF3470A2"
            android:background="@drawable/jam_praktek_rounded"
            android:gravity="center"
            android:textSize="12sp" />
            <TextView
          android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#FF3470A2"
            android:gravity="center"
            android:textSize="15sp" />

            <TextView
            android:id="@+id/practiceHours2"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:text="11:30"
            android:textAlignment="center"
            android:textColor="#FF3470A2"
            android:background="@drawable/jam_praktek_rounded"
            android:gravity="center"
            android:textSize="12sp" />
        </LinearLayout>


        <Button
            android:id="@+id/pilihdokter"
            android:layout_width="295dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/light_blue"
            android:text="Pilih"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
